<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">
            org.hibernate.dialect.MySQL8Dialect
        </property>

        <property name="hibernate.connection.driver_class">
            com.mysql.cj.jdbc.Driver
        </property>

        <property name="hibernate.connection.url">
            jdbc:mysql://localhost/hibernate
        </property>

        <property name="hibernate.connection.username">
            root
        </property>
        <property name="hibernate.connection.serverTimezone">
            UTC
        </property>

        <property name="hibernate.connection.password">
            Kasia14022014!
        </property>
        <property name="hibernate.show_sql">true</property>
        <property name="format_sql">true</property>
        <property name="generate_statistics">true</property>
        <property name="hibernate.hbm2ddl.auto">create</property>

        <mapping class="hibernate.Store"></mapping>
        <mapping class="hibernate.Customer"></mapping>
        <mapping class="hibernate.Address"></mapping>
        <mapping class="hibernate.City"></mapping>
        <mapping class="hibernate.Country"></mapping>
        <mapping class="hibernate.Staff"></mapping>
        <mapping class="hibernate.Payment"></mapping>
        <mapping class="hibernate.Rental"></mapping>
        <mapping class="hibernate.Inventory"></mapping>
        <mapping class="hibernate.Film"></mapping>
        <mapping class="hibernate.Language"></mapping>
        <mapping class="hibernate.Category"></mapping>
        <mapping class="hibernate.Actor"></mapping>
        <mapping class="hibernate.Text"></mapping>


    </session-factory>
</hibernate-configuration>